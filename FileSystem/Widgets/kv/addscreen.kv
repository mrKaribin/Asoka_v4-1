<HeadLabel@Label>:
    color: 0, 0, 0, 1
    font_size: self.height * 0.8
    size_hint: 1, None
    height: (min(root.parent.width, root.parent.height) * 0.06) if root.parent is not None else 0

<TagEditDialog>:
    orientation: "vertical"
    

<LoadDialog>:
    orientation: "vertical"
    FileChooserListView:
        id: filechooser
    BoxLayout:
        size_hint_y: None
        height: root.height * 0.08
        Button:
            text: "Cancel"
            on_release: root.cancel()

        Button:
            text: "Load"
            on_release: root.load(filechooser.path, filechooser.selection)

<AddBlockButton@Button>:
    but_size: (min(root.parent.parent.parent.parent.width, root.parent.parent.parent.parent.height) * 0.08) if root.parent is not None else 0
    size_hint: None, None
    size: self.but_size, self.but_size
    background_color: 0, 0, 0, 0

<AddBlockIcon@Image>:
    size: ((self.parent.width), (self.parent.height))
    center_x: (self.parent.center_x + (self.width / 100))
    center_y: (self.parent.center_y + (self.height / 100))

<TagLabel>:
    size_hint: (None, None)
    height: root.parent.height if root.parent is not None else 0
    width: self.texture_size[0] + 10
    font_size: root.height * 0.7
    text: root.name
    canvas.before:
        Color:
            rgba: (0.5, 0.5, 0.5, 1)
        RoundedRectangle:
            pos: self.pos
            size: self.size

<TextBlock>:
    padding: root.parent.parent.parent.padding if root.parent is not None else 0
    size_hint: None, None
    width: root.parent.parent.width if root.parent is not None else 0
    height: self.minimum_height
    TextInput:
        id: input
        size_hint: 1, None
        # height: self.texture_size[1] + 10
        font_size: 18
        background_color: (1, 1, 1, 1)

<ImageBlock>:
    padding: root.parent.parent.parent.padding if root.parent is not None else 0
    size_hint: None, None
    width: root.parent.parent.width if root.parent is not None else 0
    height: self.minimum_height
    Image:
        id: input
        size_hint: None, None
        coef: (root.width * 0.6 / self.texture_size[0]) if self.texture_size[0] != 0 else 0
        width: root.width
        height: self.texture_size[1] * self.coef

<AddScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: min(root.width, root.height) * 0.015
        padding: min(root.width, root.height) * 0.015
        HeadLabel:
            text: 'Заголовок'
        TextInput:
            id: header_input
            font_size: self.height * 0.7
            multiline: False
            size_hint: 1, None
            height: min(root.width, root.height) * 0.06
        HeadLabel:
            text: 'Теги'
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, None
            height: min(root.width, root.height) * 0.08
            spacing: min(root.width, root.height) * 0.015
            padding: min(root.width, root.height) * 0.015
            Button:
                but_size: min(root.width, root.height) * 0.05
                size_hint: None, None
                size: self.but_size, self.but_size
                background_color: 0, 0, 0, 0
                on_press: root.add_tag_clicked()
                AddBlockIcon:
                    source: 'icons/dark_add.png'
            BoxLayout:
                id: tags_layout
                orientation: 'horizontal'
                spacing: min(root.width, root.height) * 0.02
        HeadLabel:
            text: 'Содержимое'
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            size_hint: 1, None
            height: min(root.width, root.height) * 0.08
            BoxLayout:
                orientation: 'horizontal'
                size_hint: None, 1
                width: self.minimum_width
                spacing: min(root.width, root.height) * 0.015
                haligh: 'center'
                AddBlockButton:
                    on_press: root.add_image_clicked()
                    AddBlockIcon:
                        source: 'icons/dark_image.png'
                AddBlockButton:
                    on_press: root.add_video_clicked()
                    AddBlockIcon:
                        source: 'icons/dark_video.png'
                AddBlockButton:
                    on_press: root.add_audio_clicked()
                    AddBlockIcon:
                        source: 'icons/dark_music.png'
                AddBlockButton:
                    on_press: root.add_text_clicked()
                    AddBlockIcon:
                        source: 'icons/dark_text.png'
        ScrollView:
            BoxLayout:
                id: blocks_layout
                orientation: 'vertical'
                size_hint: 1, None
                height: self.minimum_height
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, None
            height: min(root.width, root.height) * 0.07
            spacing: min(root.width, root.height) * 0.015
            Button:
                text: 'Отмена'
                font_size: self.height * 0.7
                background_color: (1, 0, 0, 1)
                on_press: root.back_clicked()
            Button:
                text: 'Сохранить'
                font_size: self.height * 0.7
                background_color: (0, 1, 0, 1)
                on_press: root.save_clicked()

